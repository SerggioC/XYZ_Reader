<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.XYZApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/rosario_regular</item>
    </style>

    <style name="subtitle_text_style">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="title_text_style">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyTextStyle">
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
    </style>

</resources>
