<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="subtitle_text_style">
        <item name="android:textColor">#1c6bba</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="title_text_style">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
